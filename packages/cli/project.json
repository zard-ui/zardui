{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "tags": ["type:cli"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/cli/dist"],
      "options": {
        "commands": [
          "rm -rf packages/cli/dist",
          "npx tsc -p packages/cli/tsconfig.build.json",
          "npx tsc-alias -p packages/cli/tsconfig.build.json",
          "sed -i \"s|__REGISTRY_URL__|https://zardui.com/r|g\" packages/cli/dist/config/registry-config.js",
          "echo '#!/usr/bin/env node' | cat - packages/cli/dist/index.js > packages/cli/dist/index.tmp.js && mv packages/cli/dist/index.tmp.js packages/cli/dist/index.js",
          "chmod +x packages/cli/dist/index.js",
          "cp packages/cli/package.json packages/cli/dist/",
          "cp packages/cli/README.md packages/cli/dist/",
          "cp packages/cli/.npmignore packages/cli/dist/ 2>/dev/null || true"
        ],
        "parallel": false
      }
    },
    "build:dev": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/cli/dist"],
      "options": {
        "commands": [
          "rm -rf packages/cli/dist",
          "npx tsc -p packages/cli/tsconfig.build.json",
          "npx tsc-alias -p packages/cli/tsconfig.build.json",
          "sed -i \"s|__REGISTRY_URL__|http://localhost:4223/r|g\" packages/cli/dist/config/registry-config.js",
          "echo '#!/usr/bin/env node' | cat - packages/cli/dist/index.js > packages/cli/dist/index.tmp.js && mv packages/cli/dist/index.tmp.js packages/cli/dist/index.js",
          "chmod +x packages/cli/dist/index.js",
          "cp packages/cli/package.dev.json packages/cli/dist/package.json",
          "cp packages/cli/README.md packages/cli/dist/",
          "cd packages/cli/dist && npm link"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/cli/jest.config.ts"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx nx run cli:build", "cd packages/cli && npm publish"],
        "parallel": false
      },
      "dependsOn": ["build"]
    }
  }
}
