{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "tags": ["type:cli"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/cli",
            "glob": "README.md",
            "output": "."
          },
          {
            "input": "packages/cli",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "packages/cli",
            "glob": ".npmignore",
            "output": "."
          }
        ],
        "updateBuildableProjectDepsInPackageJson": false,
        "generatePackageJson": false,
        "additionalEntryPoints": ["packages/cli/src/index.ts"]
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/cli/tsconfig.lib.prod.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo '#!/usr/bin/env node' > dist/packages/cli/src/index.tmp.js",
          "tail -n +1 dist/packages/cli/src/index.js >> dist/packages/cli/src/index.tmp.js",
          "mv dist/packages/cli/src/index.tmp.js dist/packages/cli/src/index.js",
          "chmod +x dist/packages/cli/src/index.js"
        ],
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/cli/jest.config.ts"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/cli"
      },
      "dependsOn": ["build"]
    }
  }
}
