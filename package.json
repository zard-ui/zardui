  "scripts": {
    "start": "concurrently \"npm run watch:files\" \"npm run generate:installation\" \"npx nx run web:serve --configuration=local --port=4222  \"",
    "prepare": "husky",
    "build": "node apps/web/update-routes.mjs && npx nx run web:build --configuration=production",
    "build:cli": "npx nx run cli:build",
    "dev:cli": "npx nx run cli:build:dev",
    "test": "nx run-many --target=test --p=libs/*",
    "test:watch": "nx run-many --target=test --p=libs/* --watch",
    "watch:files": "npx tsx scripts/generate-files.cts",
    "convert:demos": "npx tsx scripts/convert-demos-to-md.cts",
    "generate:installation": "npx tsx scripts/generate-installation-guides.cts",
    "release:cli": "npx nx release --projects=packages/cli",
    "publish:cli": "npx nx run cli:publish",
    "release": "npx nx release",
    "release:dry-run": "npx nx release --dry-run",
    "serve:ssr": "node dist/apps/web/server/server.mjs"
  },
