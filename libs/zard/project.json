{
  "name": "zard",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/zard/src",
  "prefix": "z",
  "projectType": "library",
  "tags": [],
  "targets": {
    "run-scripts": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run generate:version"
      }
    },
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/zard/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/zard/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/zard/tsconfig.lib.json"
        }
      },
      "dependsOn": ["run-scripts"],
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/zard/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
